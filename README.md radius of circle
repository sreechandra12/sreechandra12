import math
radius = float(input("Enter the radius of circle : "))

def calculate_area(radius):
  area = math.pi*radius**2
  return area

print("The area of the circle :",calculate_area(radius)) def get_file_extension(filename):
    # Split the filename into parts based on the dot separator
    parts = filename.split('.')
    # The last part after the last dot is the file extension
    extension = parts[-1]
    return extension

if __name__ == "__main__":
    try:
        filename = input("Input the Filename: ")
        file_extension = get_file_extension(filename)
        print(f"The extension of the file is: '{file_extension}'")
    except IndexError:
        print("Invalid input. Please enter a valid filename.")
def get_file_extension(filename):
    # Split the filename into parts based on the dot separator
    parts = filename.split('.')
    # The last part after the last dot is the file extension
    extension = parts[-1]
    return extension

if __name__ == "__main__":
    try:
        filename = input("Input the Filename: ")
        file_extension = get_file_extension(filename)
        print(f"The extension of the file is: '{file_extension}'")
    except IndexError:
        print("Invalid input. Please enter a valid filename.")
